<div class="max-w-3xl mx-auto px-6 py-12">
  <header class="mb-12 text-center">
    <h1 class="text-4xl font-bold mb-2 font-serif">Well Read</h1>
    <p class="text-lg opacity-80 italic font-serif">A digital sanctuary for your library.</p>
  </header>

  <main>
    <% if @current_book %>
      <div class="bg-deep-ink text-cream p-8 rounded shadow-lg text-center mb-12 transform hover:scale-[1.02] transition duration-300 cursor-pointer" onclick="window.location='<%= book_path(@current_book) %>'">
        <span class="text-xs uppercase tracking-widest opacity-60 mb-2 block">Currently Reading</span>
        <h2 class="text-3xl font-bold font-serif mb-2"><%= @current_book.title %></h2>
        <p class="opacity-80 mb-8"><%= @current_book.author %></p>
        
        <%= link_to book_path(@current_book), class: "inline-flex items-center gap-2 bg-cream text-deep-ink px-8 py-3 rounded-full font-bold hover:bg-white transition" do %>
          <span>Continue Session</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        <% end %>
      </div>
      
      <div class="text-center">
        <%= link_to "View Full Library", books_path, class: "text-deep-ink/60 hover:text-deep-ink border-b border-transparent hover:border-deep-ink transition" %>
      </div>
    <% else %>
      <div class="border border-deep-ink/10 p-12 rounded-sm text-center bg-white shadow-sm">
        <p class="text-xl mb-6 font-serif text-deep-ink/70">No active reading session.</p>
        <%= link_to "Go to Library", books_path, class: "bg-deep-ink text-cream px-6 py-3 rounded-sm font-bold hover:opacity-90 transition inline-block" %>
      </div>
    <% end %>
  </main>
</div>
