<div id="<%= dom_id book %>" class="group bg-white border border-deep-ink/5 shadow-sm hover:shadow-md transition-all duration-300">
  <%= link_to book, class: "block p-6" do %>
    <div class="flex gap-6 items-start mb-4">
      <% if book.cover_image_url.present? %>
        <div class="w-16 h-24 flex-shrink-0 shadow-sm rounded-sm overflow-hidden bg-deep-ink/5">
          <img src="<%= book.cover_image_url %>" alt="<%= book.title %>" class="w-full h-full object-cover">
        </div>
      <% end %>
      
      <div class="flex-1">
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-xl font-bold font-serif leading-tight mb-1 group-hover:text-deep-ink/80 transition-colors">
              <%= book.title %>
            </h3>
            <p class="text-sm text-deep-ink/60 font-sans"><%= book.author %></p>
          </div>
          <% if book.currently_reading? %>
            <span class="inline-block w-2 h-2 rounded-full bg-deep-ink mt-2" title="Currently Reading"></span>
          <% end %>
        </div>
      </div>
    </div>

    <div class="space-y-2">
      <div class="w-full bg-deep-ink/5 h-1.5 rounded-full overflow-hidden">
        <% progress = book.total_pages.to_i > 0 ? (book.current_page.to_f / book.total_pages * 100).clamp(0, 100) : 0 %>
        <div class="bg-deep-ink h-full rounded-full" style="width: <%= progress %>%"></div>
      </div>
      <div class="flex justify-between text-xs font-sans text-deep-ink/50">
        <span><%= book.current_page %> / <%= book.total_pages %> pages</span>
        <span><%= progress.round %>%</span>
      </div>
    </div>
  <% end %>
</div>