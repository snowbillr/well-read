<div class="max-w-4xl mx-auto px-6 py-12">
  <div class="flex justify-between items-center mb-12">
    <h1 class="text-4xl font-bold font-serif">Library</h1>
    <%= link_to "Add Book", new_book_path, class: "bg-deep-ink text-cream px-6 py-2 rounded-sm hover:opacity-90 transition font-sans text-sm tracking-wide uppercase" %>
  </div>

  <% if @books.any? %>
    <% %w[currently_reading want_to_read completed dnf].each do |status| %>
      <% books = @books.select { |b| b.status == status } %>
      <% if books.any? %>
        <section class="mb-12">
          <h2 class="text-2xl font-bold border-b border-deep-ink/10 pb-2 mb-6 capitalize font-serif text-deep-ink/80">
            <%= status.humanize.gsub('Dnf', 'DNF') %>
          </h2>
          <div class="grid gap-6 md:grid-cols-2">
            <%= render books %>
          </div>
        </section>
      <% end %>
    <% end %>
  <% else %>
    <div class="text-center py-24 border border-dashed border-deep-ink/20 rounded bg-white/50">
      <p class="text-xl italic mb-6 text-deep-ink/60">Your shelves are bare.</p>
      <%= link_to "Catalogue your first volume", new_book_path, class: "text-deep-ink border-b border-deep-ink/30 hover:border-deep-ink transition pb-0.5" %>
    </div>
  <% end %>
</div>