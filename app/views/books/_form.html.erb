<%= form_with(model: book, class: "space-y-6 max-w-lg mx-auto") do |form| %>
  <% if book.errors.any? %>
    <div class="bg-red-50 text-red-900 p-4 rounded text-sm mb-6 border border-red-100">
      <h2 class="font-bold mb-2"><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul class="list-disc pl-5">
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-bold mb-2 text-deep-ink/80" %>
    <%= form.text_field :title, class: "w-full border-deep-ink/20 focus:border-deep-ink focus:ring-0 rounded-sm bg-white px-4 py-3 shadow-sm" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :author, class: "block text-sm font-bold mb-2 text-deep-ink/80" %>
      <%= form.text_field :author, class: "w-full border-deep-ink/20 focus:border-deep-ink focus:ring-0 rounded-sm bg-white px-4 py-3 shadow-sm" %>
    </div>

    <div>
      <%= form.label :isbn, "ISBN", class: "block text-sm font-bold mb-2 text-deep-ink/80" %>
      <%= form.text_field :isbn, class: "w-full border-deep-ink/20 focus:border-deep-ink focus:ring-0 rounded-sm bg-white px-4 py-3 shadow-sm" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :total_pages, class: "block text-sm font-bold mb-2 text-deep-ink/80" %>
      <%= form.number_field :total_pages, class: "w-full border-deep-ink/20 focus:border-deep-ink focus:ring-0 rounded-sm bg-white px-4 py-3 shadow-sm" %>
    </div>

    <div>
      <%= form.label :status, class: "block text-sm font-bold mb-2 text-deep-ink/80" %>
      <%= form.select :status, Book.statuses.keys.map { |k| [k.humanize, k] }, {}, class: "w-full border-deep-ink/20 focus:border-deep-ink focus:ring-0 rounded-sm bg-white px-4 py-3 shadow-sm" %>
    </div>
  </div>
  
  <% if book.persisted? %>
     <div>
       <%= form.label :current_page, class: "block text-sm font-bold mb-2 text-deep-ink/80" %>
       <%= form.number_field :current_page, class: "w-full border-deep-ink/20 focus:border-deep-ink focus:ring-0 rounded-sm bg-white px-4 py-3 shadow-sm" %>
     </div>
  <% end %>

  <div class="border-t border-deep-ink/10 pt-6 mt-6">
    <h3 class="font-bold text-lg mb-4 text-deep-ink/80">Review & Rating</h3>
    
    <div class="mb-6">
      <%= form.label :rating, "Rating (1-5)", class: "block text-sm font-bold mb-2 text-deep-ink/80" %>
      <%= form.select :rating, (1..5).to_a.reverse, { include_blank: "Select Rating" }, class: "w-full border-deep-ink/20 focus:border-deep-ink focus:ring-0 rounded-sm bg-white px-4 py-3 shadow-sm" %>
    </div>

    <div>
      <%= form.label :review_text, "Review", class: "block text-sm font-bold mb-2 text-deep-ink/80" %>
      <%= form.text_area :review_text, rows: 5, class: "w-full border-deep-ink/20 focus:border-deep-ink focus:ring-0 rounded-sm bg-white px-4 py-3 shadow-sm" %>
    </div>
  </div>

  <div class="pt-6">
    <%= form.submit class: "w-full bg-deep-ink text-cream py-3 rounded-sm font-bold hover:opacity-90 transition cursor-pointer shadow-md" %>
  </div>
<% end %>